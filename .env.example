# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/behindy
SPRING_DATASOURCE_USERNAME=behindy
SPRING_DATASOURCE_PASSWORD=your_db_password

# Redis
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=your_redis_password

# JWT
JWT_SECRET=your_jwt_secret_key_min_256_bits
JWT_ACCESS_VALIDITY=900000
JWT_REFRESH_VALIDITY=604800000

# Cookie
COOKIE_SECURE=false
COOKIE_SAME_SITE=Lax

# Encryption
FIELD_KEY=your_field_encryption_key_32_chars
TABLE_KEY=your_table_encryption_key_32_chars

# Seoul Metro API
SEOUL_METRO_API_KEY=your_seoul_metro_api_key
SEOUL_METRO_API_ENABLED=true
METRO_ENABLED_LINES=1,2,3,4,5,6,7,8,9
METRO_DAILY_LIMIT=1000

# AI Server
AI_SERVER_URL=http://localhost:8000
AI_SERVER_ENABLED=true
AI_SERVER_INTERNAL_API_KEY=your_internal_api_key
AI_STORY_GENERATION_ENABLED=true
AI_STORY_BATCH_SIZE=1
AI_STORY_TEST_INTERVAL=86400000
AI_STORY_MIN_PER_STATION=2
